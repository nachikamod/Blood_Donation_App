<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="40dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:textColor="@color/white"
            android:text="WELCOME"
            android:layout_centerHorizontal="true"
            android:id="@+id/million"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <Button
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/million"
            android:background="@drawable/custom_user_button"
            android:id="@+id/existing_user"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="EXISTING DONOR"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <Button
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/existing_user"
            android:background="@drawable/custom_user_button"
            android:id="@+id/new_user"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="NEW DONOR"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>