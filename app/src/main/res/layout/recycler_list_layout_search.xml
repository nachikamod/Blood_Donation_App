<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="2dp"
        android:background="@drawable/custom_recycler_card_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/recycler_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Name : "
                android:id="@+id/name_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/name_ref"
                android:id="@+id/nameRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recycler_two"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recycler_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Contact : "
                android:id="@+id/contact_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="+919400000000"
                android:layout_toEndOf="@id/contact_ref"
                android:id="@+id/contactRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recycler_three"
            android:layout_below="@+id/recycler_two"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/email_ref"
                android:text="Email : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/emailRecycler"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/email_ref"
                android:text="johnDoe@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/recycler_four"
            android:layout_below="@+id/recycler_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/state_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sate : "/>

            <TextView
                android:id="@+id/stateRecycler"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="state here"
                android:layout_toEndOf="@+id/state_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/recycler_five"
            android:layout_below="@+id/recycler_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/city_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City : "/>

            <TextView
                android:id="@+id/cityRecycler"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="City here"
                android:layout_toEndOf="@+id/city_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/recycler_six"
            android:layout_below="@+id/recycler_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/area_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area : "/>

            <TextView
                android:id="@+id/areaRecycler"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="Area here"
                android:layout_toEndOf="@+id/area_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/recycler_seven"
            android:layout_below="@+id/recycler_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/blood_group_ref"
                android:text="Blood Group : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/blood_group_ref"
                android:id="@+id/bloodRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>